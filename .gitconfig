[apply]
	whitespace = nowarn
[user]
	name = Siddhartha Reddy
	email = sids@grok.in
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = auto
[core]
	excludesfile = /Users/sids/.gitignore
	whitespace = cr-at-eol
[difftool "diffmerge"]
	cmd = diffmerge \"$LOCAL\" \"$REMOTE\"
[mergetool "diffmerge"]
	cmd = "diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$(if test -f \"$BASE\"; then echo \"$BASE\"; else echo \"$LOCAL\"; fi)\" \"$REMOTE\""
	trustexitcode = false
[alias]
	b = branch
	co = commit
	ch = checkout
	d = diff
	dt = difftool
	m = merge
	mergetool = mergetool
	s = status
	sh = show
	st = stash
	sts = stash save
	stl = stash list
	sta = stash apply
	stp = stash pop
	log1 = log --oneline --decorate
	fkp = "!f(){ [ \"$1\" == \"-nd\" ] && no=-nodeploy && shift; [ \"$1\" == \"-nb\" ] && no=-nobuild && shift; [ \"$#\" -ne 1 ] && echo \"USAGE: git fkp [-nd|-nb] <env>\" && exit 1; set -x; git pull && git tag -m\"Promoting to $1.\" release/$1-$(date +%Y.%m.%d-%H.%M.%S)$no && git push && git push --tags;};f"
[push]
	default = tracking
